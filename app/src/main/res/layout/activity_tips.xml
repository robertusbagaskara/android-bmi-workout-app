<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp">

        <ImageButton
            android:id="@+id/btnHistory"
            android:layout_width="205dp"
            android:layout_height="62dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="#145374"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btnHome"
            app:srcCompat="@drawable/history_24px_outlined" />

        <ImageButton
            android:id="@+id/btnHome"
            android:layout_width="206dp"
            android:layout_height="62dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="#145374"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnHistory"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/home_24px_outlined" />
        <ScrollView
            android:layout_width="368dp"
            android:layout_height="386dp"
            app:layout_constraintBottom_toTopOf="@+id/backtocalculator"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.609"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_tips_header">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_tips_line1"
                    android:layout_width="369dp"
                    android:layout_height="86dp"
                    android:text="@string/blank"
                    android:textSize="14sp"
                    android:theme="@style/SmallStyle"
                    tools:layout_conversion_absoluteHeight="19dp"
                    tools:layout_conversion_absoluteWidth="371dp" />

                <TextView
                    android:id="@+id/tv_tips_line2"
                    android:layout_width="349dp"
                    android:layout_height="73dp"
                    android:layout_marginTop="12dp"
                    android:text="@string/blank"
                    android:textSize="14sp"
                    android:theme="@style/SmallStyle"
                    tools:layout_conversion_absoluteHeight="19dp"
                    tools:layout_conversion_absoluteWidth="371dp" />

                <TextView
                    android:id="@+id/tv_tips_line3"
                    android:layout_width="350dp"
                    android:layout_height="73dp"
                    android:layout_marginTop="12dp"
                    android:text="@string/blank"
                    android:textSize="14sp"
                    android:theme="@style/SmallStyle"
                    tools:layout_conversion_absoluteHeight="19dp"
                    tools:layout_conversion_absoluteWidth="371dp" />

                <TextView
                    android:id="@+id/tv_tips_line4"
                    android:layout_width="350dp"
                    android:layout_height="73dp"
                    android:layout_marginTop="12dp"
                    android:text="@string/blank"
                    android:textSize="14sp"
                    android:theme="@style/SmallStyle"
                    tools:layout_conversion_absoluteHeight="19dp"
                    tools:layout_conversion_absoluteWidth="371dp" />

                <TextView
                    android:id="@+id/tv_tips_line5"
                    android:layout_width="match_parent"
                    android:layout_height="74dp"
                    android:layout_marginTop="12dp"
                    android:text="@string/blank"
                    android:textSize="14sp"
                    android:theme="@style/SmallStyle"
                    tools:layout_conversion_absoluteHeight="19dp"
                    tools:layout_conversion_absoluteWidth="371dp" />

                <TextView
                    android:id="@+id/tv_tips_line6"
                    android:layout_width="match_parent"
                    android:layout_height="71dp"
                    android:layout_marginTop="12dp"
                    android:text="@string/blank"
                    android:textSize="14sp"
                    android:theme="@style/SmallStyle"
                    tools:layout_conversion_absoluteHeight="19dp"
                    tools:layout_conversion_absoluteWidth="371dp" />

                <TextView
                    android:id="@+id/tv_tips_line7"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_marginTop="12dp"
                    android:text="@string/blank"
                    android:textSize="14sp"
                    android:theme="@style/SmallStyle"
                    tools:layout_conversion_absoluteHeight="19dp"
                    tools:layout_conversion_absoluteWidth="371dp" />

            </LinearLayout>
        </ScrollView>

        <TextView
            android:id="@+id/tv_tips_header"
            android:layout_width="353dp"
            android:layout_height="91dp"
            android:text="@string/blank"
            android:textSize="30sp"
            android:theme="@style/TitleStyle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.089"
            tools:layout_conversion_absoluteHeight="19dp"
            tools:layout_conversion_absoluteWidth="371dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/backtocalculator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="68dp"
            android:background="@color/white"
            android:padding="5dp"
            android:text="@string/back_to_main_menu"
            android:theme="@style/DescriptionStyle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_conversion_absoluteHeight="48dp"
            tools:layout_conversion_absoluteWidth="149dp" />

        <View
            android:id="@+id/background"
            android:layout_width="513dp"
            android:layout_height="877dp"
            tools:layout_editor_absoluteX="-122dp"
            tools:layout_editor_absoluteY="-51dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>