<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profile_page">

    <ImageButton
        android:id="@+id/btnHome"
        android:layout_width="207dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginEnd="209dp"
        android:layout_marginRight="209dp"
        android:layout_marginBottom="3dp"
        android:background="#7397AA"
        app:srcCompat="@drawable/home_24px_outlined" />

    <ImageButton
        android:id="@+id/btnHistory"
        android:layout_width="203dp"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="4dp"
        android:background="#145374"
        app:srcCompat="@drawable/history_24px_outlined" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="61dp"
        android:layout_height="55dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="46dp"
        android:layout_marginLeft="46dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="312dp"
        android:layout_marginRight="312dp"
        app:srcCompat="@drawable/user" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="115dp"
        android:layout_marginLeft="115dp"
        android:layout_marginTop="50dp"
        android:text="Profil Anda"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="201dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="17dp"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="193dp"
        android:layout_marginRight="193dp"
        android:text="Nama Lengkap" />

    <EditText
        android:id="@+id/nameField"
        android:layout_width="349dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView7"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginEnd="55dp"
        android:layout_marginRight="55dp"
        android:ems="10"
        android:imeOptions="actionDone"
        android:inputType="textPersonName"
        android:text="User" />

    <TextView
        android:id="@+id/bornLabel"
        android:layout_width="208dp"
        android:layout_height="29dp"
        android:layout_below="@+id/nameField"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="17dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="186dp"
        android:layout_marginRight="186dp"
        android:text="Tanggal Lahir" />

    <EditText
        android:id="@+id/bornField"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bornLabel"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="14dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="53dp"
        android:layout_marginRight="53dp"
        android:clickable="true"
        android:ems="10"
        android:focusable="false"
        android:inputType="textPersonName"
        android:text="01-01-2000" />

    <TextView
        android:id="@+id/genderLabel"
        android:layout_width="213dp"
        android:layout_height="31dp"
        android:layout_below="@+id/bornField"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="17dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="-1dp"
        android:layout_marginEnd="181dp"
        android:layout_marginRight="181dp"
        android:text="Jenis Kelamin" />


    <Spinner
        android:id="@+id/genderField"
        android:layout_width="161dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/genderLabel"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginEnd="238dp"
        android:layout_marginRight="238dp"
        android:entries="@array/list_gender"
        android:ems="10" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="234dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/genderField"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="17dp"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="160dp"
        android:layout_marginRight="160dp"
        android:text="Waktu Pengingat" />

    <EditText
        android:id="@+id/reminderField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView9"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginEnd="238dp"
        android:layout_marginRight="238dp"
        android:ems="10"
        android:focusable="false"
        android:clickable="true"
        android:inputType="textPersonName"
        android:text="15:00" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="217dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reminderField"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="17dp"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="177dp"
        android:layout_marginRight="177dp"
        android:text="Berat Badan Anda" />

    <EditText
        android:id="@+id/weightField"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView10"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:ems="10"
        android:inputType="number"
        android:imeOptions="actionDone"
        android:text="64" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="51dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView10"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="91dp"
        android:layout_marginLeft="91dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="269dp"
        android:layout_marginRight="269dp"
        android:ems="10"
        android:text="kg" />


    <TextView
        android:id="@+id/textView11"
        android:layout_width="233dp"
        android:layout_height="29dp"
        android:layout_below="@+id/weightField"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="17dp"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="161dp"
        android:layout_marginRight="161dp"
        android:text="Tinggi Badan Anda" />

    <EditText
        android:id="@+id/heightField"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView11"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:ems="10"
        android:imeOptions="actionDone"
        android:inputType="number"
        android:text="175" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="51dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView11"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="91dp"
        android:layout_marginLeft="91dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="269dp"
        android:layout_marginRight="269dp"
        android:text="cm" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="17dp"
        android:layout_below="@+id/textView2">
        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:layout_marginRight="40px"
            android:text="CANCEL"
            android:textSize="40px"
            app:backgroundTint="#1F4C63" />
        <Button
            android:id="@+id/btnUpdate"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:text="UPDATE"
            android:textSize="40px"
            app:backgroundTint="#1F4C63" />
    </LinearLayout>
</RelativeLayout>